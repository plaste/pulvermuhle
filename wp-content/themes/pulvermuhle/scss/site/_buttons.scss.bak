.green-btn {
    color: #f8fce9;
    font-size: 16px;
    background: transparent;
    padding: 15px 30px 15px 30px;
    border: 2px solid #fff;
    text-decoration: none;
	transition:all .5s;
}

.green-btn:hover {
    background: rgba(201, 229, 90, .5);
    text-decoration: none;
	color:#FFF;
	border: 2px solid #fff !important;
}


